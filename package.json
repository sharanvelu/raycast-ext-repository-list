{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "repositories-list",
  "title": "Repositories List",
  "description": "A Simple Repository List",
  "icon": "icon.png",
  "author": "sharan",
  "owner": "sharan-",
  "license": "MIT",
  "commands": [
    {
      "name": "list",
      "icon": "list.png",
      "title": "List Repositories",
      "description": "Show a list of added Repositories",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "1.31.0",
    "nanoid": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
